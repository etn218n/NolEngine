#define vertex
#version 330 core

layout(location = 0) in vec3 Position;

uniform mat4 uModel;
uniform mat4 uViewProjection;

void main()
{
	gl_Position = uViewProjection * uModel * vec4(Position, 1.0);
}

#define fragment
#version 330 core

out vec4 FragColor;

uniform vec4 uColor;

void main()
{
	FragColor = uColor;
}